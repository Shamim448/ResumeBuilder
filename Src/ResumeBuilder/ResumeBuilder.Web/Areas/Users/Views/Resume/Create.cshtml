@model ApplicantVM
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Applicant</h4>

<!-- custom css -->
@section Styles{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/main.css">
    }




<section id="about-sc" class="">
    <div class="container">
        <div class="about-cnt">
            <form asp-action="Create" asp-controller="Resume" asp-area="Users" class="cv-form" id="cv-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @********** about *********************@
                <div class="cv-form-blk">
                    <div class="cv-form-row-title">
                        <a data-toggle="collapse" data-target="#about-sec"
                           aria-expanded="false" aria-controls="about-sec">
                            <h3>about section</h3>
                        </a>
                    </div>
                    <div class="cv-form-row cv-form-row-about collapse" id="about-sec">
                        <div class="cols-3">
                            <div class="form-elem">
                                <label for="" class="form-label" asp-for="FName"></label>
                                <input asp-for="FName" class="form-control firstname" id="" onkeyup="generateCV()" placeholder="e.g. John">
                                <span asp-validation-for="FName" class="form-text text-danger"></span>
                            </div>
                            <div class="form-elem">
                                <label for="" class="form-label" asp-for="MName"> </label>
                                <input asp-for="MName"  class="form-control middlename" id="" onkeyup="generateCV()" placeholder="e.g. Herbert">
                                <span asp-validation-for="MName" class="form-text text-danger"></span>
                            </div>
                            <div class="form-elem">
                                <label for="" class="form-label" asp-for="LName"></label>
                                <input asp-for="LName"  class="form-control lastname" id="" onkeyup="generateCV()" placeholder="e.g. Doe">
                                <span asp-validation-for="LName" class="form-text"></span>
                            </div>
                        </div>

                        <div class="cols-3">
                            <div class="form-elem">
                                <label for="" class="form-label">Your Image</label>
                                <input name="image" type="file" class="form-control image" id="" accept="image/*" onchange="previewImage()">
                            </div>
                            <div class="form-elem">
                                <label for="" class="form-label" asp-for="Designation"></label>
                                <input asp-for="Designation" class="form-control designation" id="" onkeyup="generateCV()" placeholder="e.g. Sr.Accountants">
                                <span asp-validation-for="Designation" class="form-text text-danger"></span>
                            </div>
                            <div class="form-elem">
                                <label for="" class="form-label" asp-for="Address"></label>
                                <input asp-for="Address" class="form-control address" id="" onkeyup="generateCV()" placeholder="e.g. Lake Street-23">
                                <span asp-validation-for="Address" class="form-text text-danger"></span>
                            </div>
                        </div>

                        <div class="cols-3">
                            <div class="form-elem">
                                <label for="" class="form-label" asp-for="Email"></label>
                                <input asp-for="Email" class="form-control email" id="" onkeyup="generateCV()" placeholder="e.g. johndoe@gmail.com">
                                <span asp-validation-for="Email" class="form-text text-danger"></span>
                            </div>
                            <div class="form-elem">
                                <label for="" class="form-label" asp-for="PhoneNo"></label>
                                <input asp-for="PhoneNo" class="form-control phoneno" id="" onkeyup="generateCV()" placeholder="e.g. 456-768-798, 567.654.002">
                                <span asp-validation-for="PhoneNo" class="form-text text-danger"></span>
                            </div>
                            <div class="form-elem">
                                <label for="" class="form-label" asp-for="Summary"></label>
                                <input asp-for="Summary" class="form-control summary" id="" onkeyup="generateCV()" placeholder="e.g. Doe">
                                <span asp-validation-for="Summary" class="form-text text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                @********** achievements *********************@
                <div class="cv-form-blk">
                    <div class="cv-form-row-title">
                        <a data-toggle="collapse" data-target="#achievement-sec"
                           aria-expanded="false" aria-controls="achievement-sec">
                            <h3>achievements</h3>
                        </a>

                    </div>

                    <div class="row-separator repeater collapse" id="achievement-sec">
                        <div class="repeater" data-repeater-list="group-a">
                            <div data-repeater-item>
                                <div class="cv-form-row cv-form-row-achievement">
                                    <div class="cols-3">
                                        <div class="form-elem">
                                            <label for="" class="form-label">Title</label>
                                            <input name="achieve_title" type="text" class="form-control achieve_title" id="" onkeyup="generateCV()" placeholder="e.g. johndoe@gmail.com">
                                            <span class="form-text"></span>
                                        </div>
                                        <div class="form-elem">
                                            <label for="" class="form-label">Description</label>
                                            <input name="achieve_description" type="text" class="form-control achieve_description" id="" onkeyup="generateCV()" placeholder="e.g. johndoe@gmail.com">
                                            <span class="form-text"></span>
                                        </div>
                                    </div>
                                    <button data-repeater-delete type="button" class="repeater-remove-btn">-</button>
                                </div>
                            </div>
                        </div>
                        <button type="button" data-repeater-create value="Add" class="repeater-add-btn">+</button>
                    </div>
                </div>
                @********** experience *********************@
                <div class="cv-form-blk">
                    <div class="cv-form-row-title">
                        <a data-toggle="collapse" data-target="#experience-sec"
